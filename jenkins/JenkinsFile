pipeline {
    agent any

    stages {
        stage('Unit test backend') {
            agent {
                docker {
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }
            steps {
                dir('bugtracker-backend') {
                    sh '''
        export HOME=/var/jenkins_home
        mkdir -p $HOME/.cache/go-build
        go test -v ./... | tee result.log | go-junit-report > report.xml
    '''
                    junit 'report.xml'
                }
            }
        }
    }
}
